<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


        <RelativeLayout
            android:id="@+id/relative_parent"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal" >

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:paddingBottom="2dp" />

            <RelativeLayout
                android:id="@+id/active_time_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E8E8E8"
                    android:gravity="center"
                    android:text="@string/active_time"
                    android:textStyle="italic" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/container_activeWork"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/active_time_text_view" >

                <RelativeLayout
                    android:id="@+id/dateSquareActive"
                    android:layout_width="60dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/upperPartOfSquareActive"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:text="24"
                        android:textIsSelectable="false"
                        android:textSize="30sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/lowerPartOfSquareActive"
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:layout_below="@id/upperPartOfSquareActive"
                        android:gravity="center"
                        android:text="Mar"
                        android:textIsSelectable="false"
                        android:textSize="15sp"
                        android:textStyle="italic" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@id/dateSquareActive" >

                    <TextView
                        android:id="@+id/clock_in_textActive"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_margin="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/inText" />

                    <TextView
                        android:id="@+id/clock_detail_textActive"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@id/clock_in_textActive"
                        android:gravity="center_vertical"/>
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#000000"
                android:paddingTop="2dp" />
        </RelativeLayout>

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relative_parent" >
        </ListView>

</RelativeLayout>